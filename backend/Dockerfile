FROM node:18

WORKDIR /app

# Actualizar paquetes del sistema e instalar dependencias necesarias
RUN apt-get update && apt-get install -y openssl curl && rm -rf /var/lib/apt/lists/*

# Instalar dependencias globales necesarias
RUN npm install -g prisma

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar c贸digo fuente
COPY . .

# Generar cliente Prisma
RUN npx prisma generate

# Crear script de inicializaci贸n
RUN echo '#!/bin/bash\nset -e\n\necho " Ejecutando migraciones de Prisma..."\nnpx prisma db push --force-reset\n\necho " Ejecutando seed de la base de datos..."\nnpm run seed\n\necho " Iniciando aplicaci贸n..."\nexec "$@"' > /app/docker-entrypoint.sh && chmod +x /app/docker-entrypoint.sh

# Exponer puerto
EXPOSE 3001

# Usar el script de inicializaci贸n como entrypoint
ENTRYPOINT ["/app/docker-entrypoint.sh"]

# Comando por defecto (se sobreescribe en docker-compose)
CMD ["npm", "run", "dev"] 